print("--- Testing Logical Operators with Assert ---")

# 1. Basic AND (&&) / OR (||)
assert(true && true)
assert(!(true && false)) # Assert that this expression is FALSE
assert(true || false)
assert(false || true)
assert(!(false || false))

# 2. Keywords (and, or, not)
assert(true and true)
assert(not false)
assert(true or false)

# 3. Precedence check
# && should happen before ||
# true || false && false -> true || (false) -> true
assert(true || false && false)

# 4. Truthiness (Numbers/Strings)
# 1 is true, 0 is false. Strings are true unless empty.
assert(1 and "hello")
assert(not 0)
assert(not "")

# 5. Short Circuiting Test
# We will use a side effect to prove if code ran or not.
let ran = false

func side_effect() {
    ran = true
    return true
}

print("Testing Short Circuit (AND)...")
# 'false' on the left means 'side_effect()' should NEVER run.
ran = false
false && side_effect()
assert(not ran) 

print("Testing Short Circuit (OR)...")
# 'true' on the left means 'side_effect()' should NEVER run.
ran = false
true || side_effect()
assert(not ran)

print("Testing Normal Execution...")
# Here it MUST run
ran = false
true && side_effect()
assert(ran)

print("--- All Assertions Passed ---")